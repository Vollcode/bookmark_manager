<h1> LINKS </h1>
<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tags: <%= link.tags.inject("") { |string, tag| string << "#{tag.name} " } %>
    </li>
  <% end %>
</ul>

<br>
<form action='/links/new' method='get'>
  <input type='submit' value='Add new link'/>
</form>

<form action='/tags' method='post'>
  <input type='text' name='filter' required />
  <input type='submit' value='Filter'/>
</form>
