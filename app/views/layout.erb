<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark-o-matic 9000</title>
  </head>

  <body>
    <% if flash[:password] || flash[:email] || flash[:username] %>
      <%= flash[:password] %>
      <%= flash[:email] %>
      <%= flash[:username] %>
    <% end %>
    <% if current_user %>
      Welcome <%= current_user.username %>!
    <% end %>
    <%= yield %>
  </body>
</html>
