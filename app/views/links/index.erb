<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tags: <%= link.tags.inject("") { |string, tag| string << "#{tag.name} " } %>
      <form id='<%= link.title %>' action='/links/<%= link.id %>/new-tag' method='post'>
        <input type='text' name='tag'/>
        <input type='submit' value='Add tag' />
      </form>
    </li>
  <% end %>
</ul>

<form action='/links/new' method='get'>
  <input type='submit' value='Add new link'/>
</form>

<form action='/tags' method='post'>
  <input type='text' name='filter' required />
  <input type='submit' value='Filter'/>
</form>
